<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_theme_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip" >

        <ImageButton
            android:id="@+id/titlebar_back"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/titlebar_back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="@dimen/titlebar_title_textsize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingBottom="50dip"
        android:paddingTop="50dip" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="#99cccccc" />

        <LinearLayout
            android:id="@+id/activity_config_runmode"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/config_item_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30dip"
            android:paddingRight="30dip" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="运行模式"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_config_runmode_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS模式"
                android:textColor="#999999"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="#99cccccc" />

        <LinearLayout
            android:id="@+id/activity_config_altitude"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/config_item_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30dip"
            android:paddingRight="30dip" >

            <TextView
                android:id="@+id/activity_config_altitude_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GPS"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ToggleButton
                android:id="@+id/activity_config_altitude_value"
                android:layout_width="50dip"
                android:layout_height="32.5dip"
                android:background="@drawable/config_toggle_selector"
                android:clickable="false"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="#99cccccc" />

        <LinearLayout
            android:id="@+id/activity_config_display"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/config_item_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30dip"
            android:paddingRight="30dip" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="屏幕长亮"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ToggleButton
                android:id="@+id/activity_config_display_value"
                android:layout_width="50dip"
                android:layout_height="32.5dip"
                android:background="@drawable/config_toggle_selector"
                android:clickable="false"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="#99cccccc" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="#99cccccc" />

        <LinearLayout
            android:id="@+id/activity_config_sync"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/config_item_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30dip"
            android:paddingRight="30dip" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="同步数据"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_config_lastsycntime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06-10 11:50"
                android:textColor="#999999"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="#99cccccc" />
    </LinearLayout>

</LinearLayout>