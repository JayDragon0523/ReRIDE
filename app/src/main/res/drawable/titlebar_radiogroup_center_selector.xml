<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true" >
        <layer-list> 
        <item
        	android:right="-2dp"
        	android:left="-2dp" >
			<shape>
				<stroke  
	                android:width="1dip"
	                android:color="#7bcc43" />
			    <solid android:color="#7bcc43"/>
			    <corners 
			        android:bottomLeftRadius="0dip" 
			        android:bottomRightRadius="0dip" 
			        android:topLeftRadius="0dip" 
			        android:topRightRadius="0dip" />
			</shape>
		</item>
		</layer-list>
    </item>
    <item android:state_checked="true" >
        <layer-list> 
        <item
        	android:right="-2dp"
        	android:left="-2dp" >
			<shape>
				<stroke  
	                android:width="1dip"  
	                android:color="#7bcc43" />
			    <solid android:color="#7bcc43"/>
			    <corners 
			        android:bottomLeftRadius="0dip" 
			        android:bottomRightRadius="0dip" 
			        android:topLeftRadius="0dip" 
			        android:topRightRadius="0dip" />
			</shape>
		</item>
		</layer-list>
    </item>
    <item >
        <layer-list> 
        <item
        	android:right="-2dp"
        	android:left="-2dp" >
			<shape>
				<stroke  
	                android:width="1dip"  
	                android:color="#7bcc43" />
			    <solid android:color="#272e38"/>
			    <corners 
			        android:bottomLeftRadius="0dip" 
			        android:bottomRightRadius="0dip" 
			        android:topLeftRadius="0dip" 
			        android:topRightRadius="0dip" />
			</shape>
		</item>
		</layer-list>
    </item>
    
</selector>